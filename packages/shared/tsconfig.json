{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    
    // Essential for monorepos so other packages can "see" the types
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Ensure strictness matches your backend
    "strict": true,
    "skipLibCheck": true,
    
    // Helps with ESM compatibility
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    // This allows the shared package to be used as a project reference if needed
    "composite": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}